{
  "manifest_version": 3,
  "name": "Tab Auto-Blocker",
  "author": "George Bell",
  "version": "1.0",
  "description": "Automatically closes tabs that match a user-defined block list.",
  "permissions": ["tabs", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon48.png"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "host_permissions": ["<all_urls>"]
}
